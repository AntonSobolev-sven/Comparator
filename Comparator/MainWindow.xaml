<Window x:Class="Comparator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comparator"
        mc:Ignorable="d"
        Title="Comparator" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="400"/>
            <RowDefinition  Height="200"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Open" Content="Open" Grid.Column="0" Grid.Row="0" 
                    MinWidth="50" MaxWidth="100" MinHeight="20" MaxHeight="35" 
                    Click = "Open_Click"/>
            <TextBox x:Name="textBox"  Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
            <TextBox x:Name="textBox1"  Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Top" />
        </Grid>
    </Grid>
</Window>
